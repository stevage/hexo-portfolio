
<% if(theme.show_dates) { %>
    <h1 class="title"><%- item.title || theme.default_post_title || "Untitled" %></h1>
    <div class="meta">
        <%= item.date.format(config.date_format) %>
    </div>
<% } else { %>
    <h1><%- item.title || theme.default_post_title || "Untitled" %></h1>
<% } %>
<% if(item.cover_detail || theme.default_cover_detail) { %>
    <span class="image main"><img src="<%- item.cover_detail || theme.default_cover_detail %>" alt="" /></span>
<% } %>

<% if(item.subtitle) { %>
    <div class="subtitle"><%- item.subtitle %></div>
<% } %>

<% if(item.tech) { %>
    <div class="tech">Tech: <%- item.tech %></div>
<% } %>

<% if(item.category) { %>
    <span class="category">Category: <%- item.category %></span>
<% } %>

<!-- Need to deal with overly precise times 
<% if(item['project-date']) { %>
    <span class="project-date">Date: <%- item['project-date'] %></span>
<% } %>
-->


<!-- Gallery -->
<% if (item.photos && item.photos.length){ %>
    <%- partial('gallery') %>
<% } %>

<!-- Content -->
<%- item.content %>

<!-- Tags -->
<%- partial('article-tags') %>

<!-- Comments -->
<div>
    <%- partial("_partial/comments.ejs") %>
</div>

